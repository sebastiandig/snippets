snippet save_walk
	# save ${1:data}
	${1:data} %$%
	  walk2(
	    .x = ${2:name_column},
	    .y = ${3:plot_column},
	    \(.x, .y) {
	      .x %>%
	        str_to_lower() %>%
	        str_replace_all("\\\s", "_") %>%
	        # glue(., "${4:common suffix}", .sep = "_") %>% # remove if none needed
